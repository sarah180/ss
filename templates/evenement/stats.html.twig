{% extends 'back.html.twig' %}


{% block body %}
<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p10">
            <div class="container-fluid">
                <div align="center" class="card-group">
                    <div class="container" align="center" style="margin-top: 200px" xmlns="http://www.w3.org/1999/html">
                        <h1>Statistiques</h1>
                        <canvas id="evenement" width="400" height="100"></canvas>
                    </div>

                    <div class="table-responsive table-data">
                        <table class="table">
                            <table class="table table-borderless table-striped table-earning">


    <link rel="stylesheet" href="{{ asset ('https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css') }}" integrity="sha512-/zs32ZEJh+/EO2N1b0PEdoA10JkdC3zJ8L5FTiQu82LR9S/rOQNfQN7U59U9BC12swNeRAz3HSzIL2vpp4fv3w==" crossorigin="anonymous" referrerpolicy="no-referrer">

    <script src="{{ asset ('https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js') }}" integrity="sha512-s+xg36jbIujB2S2VKfpGmlC3T5V2TF3lY48DX7u2r9XzGzgPsa6wTpOQA7J9iffvdeBN0q9tKzRxVxw1JviZPg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>

        let event = document.querySelector("#evenement")
        let annGraph = new Chart(evenement, {
            type: "bar",
            data: {
                labels: {{ id|raw }},
                datasets: [{
                    label: "Nombre des Participants",
                    data: {{ nbrPersonnes|raw }},
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        })
    </script>
                                </tbody>


                            </table>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

    </div>

{% endblock %}
